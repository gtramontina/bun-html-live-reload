{
  "name": "@gtramontina.com/bun-html-live-reload",
  "description": "HTML live reload for Bun",
  "version": "1.0.1",
  "homepage": "https://github.com/gtramontina/bun-html-live-reload.git",
  "license": "MIT",
  "module": "index.ts",
  "main": "index.js",
  "files": ["index.ts", "index.js", "live-reload.js"],
  "type": "module",
  "scripts": {
    "lint": "bun x @biomejs/biome check --vcs-client-kind=git --vcs-enabled=true --vcs-use-ignore-file=true . *.json",
    "lint:fix": "bun x @biomejs/biome check --apply-unsafe --vcs-client-kind=git --vcs-enabled=true --vcs-use-ignore-file=true . *.json",
    "run:example": "bun --hot example/index.ts",
    "build": "bun build --target=node ./index.ts --outfile ./index.js",
    "prepublish": "bun run build"
  },
  "devDependencies": {
    "bun-types": "1.0.21"
  }
}